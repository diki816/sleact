{
    "compilerOptions": {
        "esModuleInterop": true, // import * as React from 'react';
        "sourceMap": true,
        "lib": ["ES2020", "DOM"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "ES5",
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": { // impor 시 절대 경로처럼 eg. import @layouts/login (not ../../layouts/login)
            "@hooks/*": ["hooks/*"],
            "@components/*": ["components/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@utils/*": ["utils/*"],
            "@typings/*": ["typings/*"]
        }
    }
}